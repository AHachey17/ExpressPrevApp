<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>To-do List</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>To Do List</h1>
  
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) {%>
    <li class="message">
      <span class="date"><%= messages[i].date %></span>
      <span class="<%= messages[i].completed%>"><%= messages[i].msg %></span>
      <span><i class="fa fa-check" aria-hidden="true"></i></span>
      <!-- <span><%= messages[i].thumbDown %></span> -->
      <span><i class="fa fa-rotate-right" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <h2>Add a Task</h2>

  <form action="/messages" method="POST">
    <input type="date" placeholder="due date" name="date">
    <input type="text" placeholder="message" name="msg">
    <button type="submit">Submit</button>
  </form>

  <script src="main.js"></script>

</body>
</html>
